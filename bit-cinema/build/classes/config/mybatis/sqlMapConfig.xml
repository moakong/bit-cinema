<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 설정파일에서 사용할 프로퍼티의 파일의 경로 지정: classpath -->
	<properties resource="config/mybatis/db.properties"/>
	
	<!-- SQL의 결과를 담을 VO 객체들의 별칭을 설정하여 사용의 편의를 도모  -->
	<typeAliases>
	<!-- db에서 값을 받아 VO에 담아 쓸것인데, 계속 VO객체의 긴 주소를 매번 치기 힘드니까 알리아스를 만들어 사용한다 -->
		<typeAlias alias="SeatVO" type="reservation3_DB.SeatVO" /> 
	</typeAliases>
	
	<!-- enviroment를 여러개 해서 사용할 db를 미리 여러개 설정해 놓을 수 있고, 바로 아래default의 db로 기본 접속된다 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/> <!-- JDBC를 여전히 쓰는 것 -->
			<dataSource type="POOLED"> <!-- 어제 배운 pool방식을 사용하겠다는 것 -->
				<!-- 위에서 지정한 properties 경로의 파일에서 해당 변수에 해당하는 값을 가져온다 -->
				<property name="driver" value="${driver}"/> 
				<property name="url" value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>


	<!-- 필요한 쿼리들을 모아 놓은 파일 = mapper -->
	<mappers>
		<mapper resource="config/sqlmap/oracle/seat.xml"/>
	</mappers>
</configuration>